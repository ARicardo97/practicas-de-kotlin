<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rojo"
    tools:context=".NoAccesoActivity">

    <TextView
        android:id="@+id/noAccesoTxEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_edad"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/noAccesoTxdeves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deves_ser"
        android:layout_below="@+id/noAccesoTxEdad"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/btn_regresar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_regresar_blanco_24dp"
        android:layout_below="@+id/noAccesoTxdeves"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>